<!-- //receives an array of  available maps -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/b383617d0a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles/mapView.css" type="text/css" />
    <link rel="stylesheet" href="/styles/commonStyles.css" type="text/css" />
    <title>Map List</title>
  </head>
  <body>
    <header>
      <nav class="navBar">
        <div class="WikiMapsLogo">
          <h1>WikiMaps</h1>
          <i class="fa-solid fa-signs-post"></i>
        </div>
        <div>
          <a href="/maps">View All Maps</a>
          <!-- Change to logout route below(as we will be logged in atthis point)-->
          <a href="/login">Login</a>
        </div>
      </nav>
    </header>
    <h2>Hey Username!</h2>
    <div>
      <h2>Here are your favourite maps:</h2>
    </div>
    <div>
      <h2>Here are the maps you have contributed to:</h2>
    </div>
    <div>
      <h2>All maps:</h2>
      <div>
        <% for(const map in maps) { %>
          <div>
            <a href="/maps/<%= maps[map].id %>"><%= maps[map].title %></a>
            <p><%= maps[map].description %></p>
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
