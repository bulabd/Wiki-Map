<!-- //receives an array of  available maps -->

<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/_head') %>
    <!-- <link rel="stylesheet" href="/styles/mapView.css" type="text/css" /> -->
    <title>Map List</title>
  </head>
  <body>
    <header>
      <nav class="navBar">
        <div class="WikiMapsLogo">
          <h1>WikiMaps</h1>
          <i class="fa-solid fa-signs-post"></i>
        </div>
        <div>
          <a href="/all_maps" class="link-dark">>View All Maps</a>
          <form method="GET" action="/logout">
           <a href="/login" class="link-dark"></a>><button class="btn btn-outline">Logout</button></a>
          </form>
        </div>
      </nav>
    </header>
    <main>
    <h2>Hey Username!</h2>
    <div>
      <h2>Here are your favourite maps:</h2>
    </div>
    <div>
      <h2>Here are the maps you have contributed to:</h2>
    </div>
    <div>
      <h2>All maps:</h2>
      <div>
        <% for(const map in maps) { %>
          <div>
            <a href="/maps/<%= maps[map].id %>" class="link-dark"><%= maps[map].title %></a>
            <p><%= maps[map].description %></p>
          </div>
        <% } %>
      </div>
    </div>
  </main>
    <%- include('partials/_footer') %>
  </body>
</html>
